   // Message from server
   socket.on('message', async (message) => {
      //outputMessage(message, "outgoing-message");
      if(message.username == username) {
         outputMessage(message, "outgoing-message");
      } else {
         outputMessage(message, "incoming-message");
      }
      //dDieble The Send Button
      msgSendStatus = false;
      await updateSendMessage();
      // Scroll down
      chatMessages.scrollTop = chatMessages.scrollHeight;
   });

   // Message submit
   chatForm.addEventListener('submit', (e) => {
      e.preventDefault();

      // Get message text
      let msg = e.target.elements.msg.value;

      msg = msg.trim();

      if (!msg && !isNaN(msg)) {
         return false;
      }
      //Hide error message
      $(".errorMsgClass").html("");
      // Emit message to server
      socket.emit('chatMessage', {username,roomName,msg});

      // Clear input
      e.target.elements.msg.value = '';
      e.target.elements.msg.focus();
   });

   // Output message to DOM
   function outputMessage(message, inOutClass="outgoing-message") {
      let currRoom = message.room;
      if(roomName == currRoom) {
         const div = document.createElement('div');
         div.classList.add('message');
         div.classList.add('message-box-holder');
         const div2 = document.createElement('div');
         div2.classList.add('message-box');
         if(message.username == username) {
            div2.classList.add("outgoing-message");
         } else {
            div2.classList.add("incoming-message");
         }
         div2.innerText = message.name;
         const i = document.createElement('i');
         i.classList.add('fa');
         i.classList.add('fa-inr');
         const span = document.createElement('span');
         span.appendChild(i);
         const label = document.createElement('label');
         label.classList.add('bid-amount');
         label.appendChild(span);
         //label.innerText = message.text;
         const p = document.createElement('p');
         p.innerText = message.text;
         label.appendChild(p);
         div2.appendChild(label);
         div.appendChild(div2);
         document.querySelector('.chat-messages').appendChild(div);
      }
   }

