<script>
   async function fetchData() {
     try {
       const response = await fetch('/api/app-home');
       const data = await response.json();
       // Process the data here
       const bestDeals = data.respdata.best_deal;

       const bestDealsSlider = document.getElementById('best-deals-slider');

       bestDeals.forEach(deal => {
           const sliderItem = document.createElement('div');
           sliderItem.classList.add('slider-item');
           sliderItem.innerHTML = `
             <div class="product-box">
                <div class="product-image">
                   <a href="javascript:void(0)"><img src="${deal.image}" alt="images" class="img-fluid"></a>
                </div>
                <div class="prd-short-info">
                   <div class="prd-name"><a href="javascript:void(0)">${deal.name}</a></div>
                   <div class="prd-price"><span><i class="fa fa-inr" aria-hidden="true"></i></span>${deal.offer_price}</div>
                   <div class="rtl-price"><span>Est. Retail:</span>₹${deal.price}</div>
                </div>
                <div class="prd-button-group">
                   <a href="javascript:void(0)" class="prd-btn">Buy Now</a>
                   <a href="bids.php" class="prd-btn orng-btn">Bid Now</a>
                </div>
                <div class="prd-batch">${deal.status_name}</div>
             </div>
           `;
           bestDealsSlider.appendChild(sliderItem);
       });

     } catch (error) {
       console.error('Error fetching data:', error);
     }
   }


   window.onload = fetchData;

</script>

