        var hTml = ``;
        async function fetchData1() {
            try {
                response1 = await fetch('/otherwise-list');
                const data1 = await response1.json();
                const topmenu1 = data1.categories;
                const response = await fetch('/top-categoriesweb');
                const data = await response.json();
                const topmenu = data.respdata;
                populateSlider1(topmenu);
                megamenu(topmenu1);
            }
            catch (error) {
                console.error('Error fetching data:', error);
            }
        }
        async function womenlistData() {
            try {
                response = await fetch('/womengender-list');
                const data = await response.json();
                const topmenu = data.categories;
                womenmenu(topmenu);
