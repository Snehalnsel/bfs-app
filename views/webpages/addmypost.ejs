         </div>        
       </div>

       <div class="dashboard-content">
          <div class="dashboard-infobox">
             <div class="dashboard-title-arrow mb-25">
                <h4 class="di-title mr-25">Add Your Product</h4>
                <div class="edit-link"><a href="/api/my-account">Back </a></div>
             </div>
             
             <div class="dsh-shortbox">
                <form action="/api/addnewpost" method="post" enctype="multipart/form-data" id="addPostForm">
                   <div class="div-row">
                   <div class="div-12">
                      <div class="post-imagebox">
                         <div class="upload-post full-post-image">
                            <h6 class="add-image-heading">+Add Image</h6>
                            <input type="file" name="image" id="imgInp" required />
                            <div class="alt_image"></div>
                         </div>
                         <div class="upload-post full-post-image">
                            <h6 class="add-image-heading">+Add Image</h6>
                             <input type="file" name="image" id="imgInp" />
                             <div class="alt_image"></div>
                         </div>
                         <div class="upload-post full-post-image">
                             <h6 class="add-image-heading">+Add Image</h6>
                             <input type="file" name="image"  id="imgInp" />
                             <div class="alt_image"></div>
                         </div> 
                          <div class="upload-post full-post-image">
                             <h6 class="add-image-heading">+Add Image</h6>
                             <input type="file" name="image" id="imgInp"  />
                             <div class="alt_image"></div>
                         </div> 
                          <div class="upload-post full-post-image">
                             <h6 class="add-image-heading">+Add Image</h6>
                             <input type="file" name="image" id="imgInp"  />
                             <div class="alt_image"></div>
                         </div>                       
                      </div>
                   </div> 
                      <div class="div-12">
                         <label>Product Name <span class="required">*</span></label>                        
                          <input type="type" name="name" class="ds-form-control" placeholder="Product Name" required>
                      </div>
 
                      <div class="div-12">
                         <label>Product Description</label>                        
                         <textarea class="ds-form-control" name="description" placeholder="Enter Message"></textarea>
                      </div>
 
                      <div class="div-6">
                         <label>Product Category </label>
                        <input type="type" name="product_cate" class="ds-form-control" placeholder="Enter Category">
                      </div>
 
                      <div class="div-6">
                         <label>Product Brand <span class="required">*</span></label>
                         <input type="type" name="brand" class="ds-form-control" placeholder="Enter Brand" required>
                      </div>
 
                      <div class="div-6">
                        <label for="productCondition">Product Condition <span class="required">*</span></label>
                        <select class="ds-form-control" name="product_condition" id="productCondition" required>
                            <option value="" disabled selected>Select Condition</option>
                            <% productcondition.forEach(function(item) { %>
                                <option value="<%= item._id %>"><%= item.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    
 
                      <div class="div-6">
                         <label>Product Size</label>
                         <input type="type" name="size" class="ds-form-control" placeholder="Product Size">
                      </div>
 
                      <div class="div-6">
                         <label>Original Invoice</label>
                         <label class="switch ">
                           <input type="checkbox" name="original_invoice">
                             <span class="tg-slider round"></span>
                         </label>
                         
                      </div>
 
                      <div class="div-6">
                        <label>Original Packaging</label>
                        <label class="switch ">
                           <input type="checkbox" name="original_package">
                             <span class="tg-slider round"></span>
                         </label>
                      </div>

                      <div class="div-6">
                        <label>Gender</label>
                        <div class=" inlineflex" >
                           <% if(genderList){%>
                              <% genderList.forEach(function(item) { %>
                                 <span>
                                    <input type="radio" id="<%= item._id %>" name="gender" value="<%= item._id %>">
                                    <label for="<%= item._id %>"><%= item.name %></label>
                                 </span>
                                 
                              <% }); %>   
                           <% } %>
                        </div>
                     </div>

    
                      <div class="div-6">
                         <label>Height</label>
                        <input type="type" name="height" class="ds-form-control" placeholder="Height in cm">
                      </div>
                      
                      <div class="div-6">
                         <label>Weight</label>
                        <input type="type" name="weight" class="ds-form-control" placeholder="Weight in Kg">
                      </div>
                      
                      <div class="div-6">
                         <label>Length</label>
                        <input type="type" name="length" class="ds-form-control" placeholder="Length in cm">
                      </div>
                      
                      <div class="div-6">
                         <label>Breadth</label>
                        <input type="type" name="breath" class="ds-form-control" placeholder="Breadth in cm">
                      </div>
                      
                      <div class="div-6">
                         <label>Price <span class="required">*</span></label>
                        <input type="type" name="price" class="ds-form-control" placeholder="Price" required>
                      </div>
 
                      <div class="div-6">
                         <label>Offer Price <span class="required">*</span></label>
                        <input type="type" name="offer_price" class="ds-form-control" placeholder="Offer Price" required>
                      </div>
                      
                     
                      <div class="div-12">
                         <input type="submit" name="" class="ds-form-control userpost-btn" value="Post Your Product">
                      </div>
                   </div>
                </form>
                
             </div>
             
          </div>
       </div>
    </div>
 </section>

