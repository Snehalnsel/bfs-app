<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head', {pageTitle: pageTitle}); %>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../../partials/sidebar', {siteName: siteName}); %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('../../partials/header', {siteName: siteName, userFullName: userFullName, userImage: userImage}); %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                      <!-- Page Heading -->
                      <h1 class="h3 mb-2 text-gray-800"><%-pageName%></h1>
                      <p class="mb-4">Edit <%-pageName%></p>
  
                      <!-- DataTales Example -->
                      <div class="card shadow mb-4">
                          <div class="card-header py-3">
                              <h6 class="m-0 font-weight-bold text-primary"><%-pageName%> Edit</h6>
                          </div>
                          <div class="card-body">
                            <form class="user" action="/admin/update-app-details" method="post">

                        
                                <div class="form-group row">
                                    <input type="hidden"  name="app_id" placeholder="App version" value="<%-respdata._id%>" >
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="app_ver" name="app_ver" placeholder="App version" value="<%-respdata.app_ver%>" required>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="app_name" name="app_name" placeholder="App Name" value="<%-respdata.app_name%>" required>
                                    </div>
                                </div>

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" id="app_privacy" name="app_privacy" placeholder="App Privacy" value="<%-respdata.app_privacy%>" required>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" id="best_deal" name="best_deal" placeholder="Best Deal" value="<%-respdata.best_deal%>" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <textarea type="text" class="form-control form-control-user" id="app_details" name="app_details" placeholder="App Details" value="<%-respdata.app_about%>" required><%-respdata.app_about%></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="file" name="app_image" id="app_image" placeholder="App Image" >
                                    <img src="https://dev.solutionsfinder.co.uk:4000/public/images/BFS logo-f.png" alt="" class="product-image" style="padding:10px; height:100px; width:100;" >
                                </div>
                            </div>

                                <input type="submit" class="btn btn-primary btn-user btn-block" id="btn_profile" name="btn_profile" value="Submit">
                            </form>
                            <hr>
                            <% if(!status){ %>
                                <h6 style="background-color:aquamarine; align-content: center;">Message: <%= message %></h6>
                                <p><%# respdata %></p>
                            <% } %>
                          </div>
                      </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../../partials/footer', {year: year, siteName: siteName}); %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    
    <%- include('../../partials/logoutModal'); %>

    <%- include('../../partials/footerJs'); %>

</body>

</html>