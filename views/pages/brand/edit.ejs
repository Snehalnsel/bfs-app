<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head', {pageTitle: pageTitle}); %>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../../partials/sidebar', {siteName: siteName}); %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('../../partials/header', {siteName: siteName, userFullName: userFullName, userImage: userImage}); %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                      <!-- Page Heading -->
                      <h1 class="h3 mb-2 text-gray-800"><%-pageName%></h1>
                      <p class="mb-4">Edit <%-pageName%></p>
  
                      <!-- DataTales Example -->
                      <div class="card shadow mb-4">
                          <div class="card-header py-3">
                              <h6 class="m-0 font-weight-bold text-primary"><%-pageName%> Edit</h6>
                          </div>
                          <div class="card-body">
                            <form class="user" action="/update-brand" method="post" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="hidden" id="brand_id" name="brand_id" value="<%- respdata.brand._id %>">
                                        <input type="text" class="form-control form-control-user" id="name" name="name" placeholder="Name" value="<%- respdata && respdata.brand.name ? respdata.brand.name : '' %>" required>

                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <textarea type="text" class="form-control form-control-user" id="description" name="description" placeholder="Description" required><%-respdata.brand.description%></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">

                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="file" id="image" name="image" >
                                        <img src="<%-respdata.brand.image%>" style="height: 100px;width: 100px;">
                                        <a href="<%= respdata.brand.image %>" download="<%= respdata.brand.name %>.jpg" class="btn btn-success btn-circle btn-sm" title="Download">
                                            <i class="fas fa-download"></i>
                                    </a>
                                    </div>

                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <select class="form-control" name="status"
                                            id="status" required>
                                            <option value="" selected>Select Approval Status</option>
                                            <option value="0" <%=(respdata && respdata.brand.status===0)
                                                ? 'selected' : '' %>>Pending</option>
                                            <option value="1" <%=(respdata && respdata.brand.status===1)
                                                ? 'selected' : '' %>>Active</option>
                                            <option value="2" <%=(respdata && respdata.brand.status===2)
                                                ? 'selected' : '' %>>Inactive</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">

                                </div>
                                <input type="submit" class="btn btn-primary btn-user btn-block" id="btn_profile" name="btn_profile" value="Submit">
                            </form>
                            <hr>
                            <% if(!status){ %>
                                <h6 style="background-color:aquamarine; align-content: center;">Message: <%= message %></h6>
                                <p><%# respdata %></p>
                            <% } %>
                          </div>
                      </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../../partials/footer', {year: year, siteName: siteName}); %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    
    <%- include('../../partials/logoutModal'); %>

    <%- include('../../partials/footerJs'); %>

</body>

</html>