        function populateSlider1(data) {
            data.forEach(item => {
                hTml += `<div class="slider-item">
                            <div class="sld-iconbox">
                                <a href="/websubcategoriesproducts/${item._id}">
                                    <div class="ctg-icon">
                                        <img src="${item.image}" alt="images">
                                    </div>
                                    <h6>${item.name}</h6>
                                </a>
                            </div> 
                        </div>`;
            });
            document.getElementById("top-menu").innerHTML = hTml;
        }
        function megamenu(data) {
            data.forEach(item => {
                var hTml1 = `<li><a href="/websubcategoriesproducts/${item._id}">${item.name}</a></li>`;
                var ulElements = document.getElementsByClassName('listing-data');
                for (var i = 0; i < ulElements.length; i++) {
                    ulElements[i].innerHTML += hTml1;
                }
            });
        }
        function womenmenu(data) {
            data.forEach(item => {
