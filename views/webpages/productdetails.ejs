                     <a href="javascript:void(0)" class="prd-btn orng-btn bidButton">Bid Now</a>
                     <% } %>
                  <% if(isWhislist==false) {%>
                     <a href="javascript:void(0)" class="prd-btn wish-btn" data-id="<%=respdata._id%>"><i
                           class="fa fa-heart-o" aria-hidden="true"></i></a>
                     <% } else { %>
                        <a href="javascript:void(0)" class="prd-btn wish-rem-btn" data-id="<%=respdata._id%>"><i
                              class="fa fa-heart" aria-hidden="true"></i></a>
                        <% } %>
