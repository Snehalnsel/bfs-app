                           <!-- Twitter (url, text, @mention) -->
                           <div class="share-linksbox">
                              <span class="close-icon"><i class="fa fa-times" aria-hidden="true"></i></span>
                              <ul>
                                 <li><a target="_blank" href="https://api.whatsapp.com/send?text=<%=websiteUrl%>/api/productdeatils/<%=respdata._id%>" data-action="share/whatsapp/share" class="slc-btn wa-btn "><i class="fa fa-whatsapp" aria-hidden="true"></i></a>
