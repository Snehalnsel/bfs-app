<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head', {pageTitle: pageTitle}); %>
    <style>
        .table th {
            text-align: center;   
        }
    </style>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../../partials/sidebar', {siteName: siteName}); %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('../../partials/header', {siteName: siteName, userFullName: userFullName, userImage: userImage}); %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                      <!-- Page Heading -->
                      <h1 class="h3 mb-2 text-gray-800"><%-pageName%></h1>
                      <p class="mb-4">View / edit <%-pageName%> details</p>
  
                      <!-- DataTales Example -->
                      <div class="card shadow mb-4">
                          <div class="card-header py-3">
                              <h6 class="m-0 font-weight-bold text-primary"><%-pageName%> Details</h6>
                          </div>
                          <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Sl No</th>
                                            <th>App Image</th>
                                            <th>App Version</th>
                                            <th>App Name</th>
                                            <th>App Privacy</th>
                                            <th>App About</th>
                                            <th>Best Deal</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (respdata.list) { %>
                                            <% respdata.list.forEach(function (value, index) { %>
                                              <tr>
                                                <td><%= (index + 1) %></td>
                                                <td><img src="https://dev.solutionsfinder.co.uk:4000/public/images/BFS logo-f.png" alt="" class="product-image" style="padding:10px; height:100px; width:100;" ></td>
                                                <td><%= value.app_ver %></td>
                                                <td><%= value.app_name %></td>
                                                <td><%= value.app_privacy %></td>
                                                <td><%= value.app_about %></td>
                                                <td><%= value.best_deal %></td>
                                                <td><!-- Action Links --> 
                                                  <a href="/admin/app-details/<%= value._id %>" class="btn btn-info btn-circle btn-sm" title="Edit">
                                                    <i class="fas fa-pencil-alt"></i>
                                                  </a>
                                                  <!-- <a href="/admin/delete-appsettings/<%= value._id %>" class="btn btn-danger btn-circle btn-sm" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                  </a> -->
                                                </td>
                                              </tr>
                                            <% });  %>
                                          <% } %>
                                          
                                    </tbody>
                                </table>
                            </div>
                            <hr>
                         
                          </div>
                      </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../../partials/footer', {year: year, siteName: siteName}); %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    
    <%- include('../../partials/logoutModal'); %>

    <%- include('../../partials/footerJs'); %>

</body>

</html>

<script>
  $(document).ready(function() {
    $('#dataTable').DataTable({
      "paging": true,
      "ordering": true,
      "searching": true
    });
  });
</script>
