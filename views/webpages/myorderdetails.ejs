<section class="bids-wrapper">
    <div class="container">
       <div class="orderdetails-box">
          <div class="row">
             <div class="col-md-5">
               <div class="br-details ob-details">
                  <% if(respdata.product.image){%>
                   <div class="bid-images"><img src="<%=respdata.product.image%>" alt="images" class="img-fluid"></div>
                   <%} else {%>
                     <div class="bid-images"><img src="" alt="images" class="img-fluid"></div>
                   <% } %>
                   <div class="bid-info">
                      <div class="bd-title">
                         <a href="order-details.php"><%=respdata.product.name;%></a>
                      </div>
                      <div class="bd-price">
                         <span><i class="fa fa-inr" aria-hidden="true"></i></span>
                         <%=respdata.product.offer_price;%>
                      </div>                     
                   </div>
                </div> 
             </div>
             <div class="col-md-4">
                <div class="od-box">
                   <h5 class="short-title">Delivery Address</h5>
                  
                   <p><%=respdata.buyeraddress.address1;%> , <%=respdata.buyeraddress.street_name;%> , <%=respdata.buyeraddress.landmark;%>, <%=respdata.buyeraddress.city_name;%> , <%=respdata.buyeraddress.state_name;%> <%=respdata.buyeraddress.pin_code;%></p>
                </div>
                <div class="od-box">
                    <h5 class="short-title">Phone number</h5>
                    <%if(respdata.user.phone_no){%>
                    <p><%=respdata.user.phone_no;%></p>
                    <%} else{%>
                     <p></p>
                     <%}%>
                </div>               
             </div>
              <div class="col-md-3">
                <div class="od-box">
                   <h5 class="short-title">More actions</h5>
                   <div class="act-btn-row">
                      <div class="act-btn">
                         <a href="javascript:void(0)">Download Invoice</a>
                      </div>
                      <div class="act-btn black-btn">
                         <a href="javascript:void(0)">Download label</a>
                      </div>
                   </div>                   
                </div>                            
             </div>
 
              <div class="col-md-9">
                <div class="od-box">
                   <h5 class="short-title">Order Tracking</h5>
                   <div class="tracking-list">
                      <div class="tracking-steps">
                         <div class="steps-box step-done">
                            <div class="steps-label">
                               Order Confirmed
                            </div>
                            <div class="date-icfo">Mon, 9th Oct</div>                           
                         </div>
                         <div class="steps-box step-done">
                            <div class="steps-label">
                               Shipped
                            </div>
                            <div class="date-icfo">Mon, 11th Oct</div>                           
                         </div>
                         <div class="steps-box step-done">
                            <div class="steps-label">
                               Out For Delivery
                            </div>
                            <div class="date-icfo">Mon, 14th Oct</div>                           
                         </div>
                         <div class="steps-box">
                            <div class="steps-label">
                               Delivered
                            </div>
                            <div class="date-icfo">Mon, 16th Oct</div>                           
                         </div>
                      </div>                   
                   </div>                 
                </div>              
             </div>
             
