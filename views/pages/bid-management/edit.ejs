<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head', {pageTitle: pageTitle}); %>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../../partials/sidebar', {siteName: siteName}); %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('../../partials/header', {siteName: siteName, userFullName: userFullName, userImage: userImage}); %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                      <!-- Page Heading -->
                      <h1 class="h3 mb-2 text-gray-800"><%-pageName%></h1>
                      <p class="mb-4">Edit <%-pageName%></p>
  
                      <!-- DataTales Example -->
                      <div class="card shadow mb-4">
                          <div class="card-header py-3">
                              <h6 class="m-0 font-weight-bold text-primary"><%-pageName%> Edit</h6>
                          </div>
                          <div class="card-body">
                            <form class="user" action="/updatebiddetails" method="post">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="hidden" name="bid_id" value="<%- respdata.bidDetails._id %>">
                                        <input type="text" class="form-control form-control-user"
                                            id="product_name" name="product_name" placeholder="Name"
                                            value="<%-respdata.productDetails.name%>" required>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user"
                                        id="final_price" name="final_price" placeholder="Name"
                                        value="<%-respdata.bidDetails.final_price%>" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="hidden" name="product_id" value="<%- respdata._id %>">
                                        <input type="text" class="form-control form-control-user"
                                            id="buyer_name" name="buyer_name" placeholder="Name"
                                            value="<%-respdata.bidDetails.buyer_id.name%>" required>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user"
                                        id="original_price" name="original_price" placeholder="Name"
                                        value="<%-respdata.bidDetails.original_price%>" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="hidden" name="product_id" value="<%- respdata._id %>">
                                        <input type="text" class="form-control form-control-user"
                                            id="seller_name" name="seller_name" placeholder="Name"
                                            value="<%-respdata.bidDetails.seller_id.name%>" required>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user"
                                        id="seller_price" name="seller_price" placeholder="Name"
                                        value="<%-respdata.bidDetails.seller_price%>" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <select class="form-control" name="status"
                                            id="status" required>
                                            <option value="" selected>Select Approval Status</option>
                                            <option value="0" <%=(respdata && respdata.bidDetails.status===0)
                                                ? 'selected' : '' %>>Pending</option>
                                            <option value="1" <%=(respdata && respdata.bidDetails.status===1)
                                                ? 'selected' : '' %>>Approved</option>
                                            <option value="2" <%=(respdata && respdata.bidDetails.status===2)
                                                ? 'selected' : '' %>>Rejected</option>
                                        </select>
                                    </div>

                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <select class="form-control" name="chat_status"
                                            id="chat_status" required>
                                            <option value="" selected>Select Chat Status</option>
                                            <option value="0" <%=(respdata && respdata.bidDetails.chat_status===0)
                                                ? 'selected' : '' %>>Counter</option>
                                            <option value="1" <%=(respdata && respdata.bidDetails.chat_status===1)
                                                ? 'selected' : '' %>>YES</option>
                                            <option value="2" <%=(respdata && respdata.bidDetails.chat_status===2)
                                                ? 'selected' : '' %>>NO</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <!-- <input type="file" id="image" name="image" > -->
                                        <img src="<%-respdata.productImage.image%>" style="height: 120px;width: 120px;">
                                        <a href="<%= respdata.productImage.image %>" download="<%= respdata.name %>.jpg" class="btn btn-success btn-circle btn-sm" title="Download">
                                            <i class="fas fa-download"></i>
                                    </a>
                                    </div>
                                </div>
                                <input type="submit" class="btn btn-primary btn-user btn-block" id="btn_profile" name="btn_profile" value="Submit">
                            </form>
                            <hr>
                            <% if(!status){ %>
                                <h6 style="background-color:aquamarine; align-content: center;">Message: <%= message %></h6>
                                <p><%# respdata %></p>
                            <% } %>
                          </div>
                      </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../../partials/footer', {year: year, siteName: siteName}); %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    
    <%- include('../../partials/logoutModal'); %>

    <%- include('../../partials/footerJs'); %>

</body>

</html>