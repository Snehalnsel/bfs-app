<%- include('../../public/assets/include/header'); %>

   <section class="inner-wrapper white-inner-wrapper bb-none">
      <div class="container">
         <div class="breadcum-product">
            <ul>
               <li><a href="/home">Home</a></li>
               <li><a href="/websubcategoriesproducts/<%=category._id%>">
                     <%=category.name%>
                  </a></li>
                  <% if (respdata && Object.keys(respdata).length > 0) { %>
                  <li>
                     <%=respdata.name%>
                  </li>
                  <% } else { %>
                     <!-- Handle case when respdata is not found -->
                     <li>Product Not Found</li>
               <% } %>
            </ul>
         </div>
         <% if (respdata && Object.keys(respdata).length > 0) { %>
            <div class="single-product-box">
               <div class="product-gallery">
                  <div class="exzoom hidden" id="exzoom">
                     <div class="exzoom_img_box">
                        <ul class='exzoom_img_ul'>
                           <% if (respdata.product_images) { %>
                              <% respdata.product_images.forEach(function (item) { %>
                                 <li><img src="<%= item.image %>" /></li>
                                 <% }); %>
                                    <% } %>
                        </ul>
                     </div>
                     <div class="exzoom_nav"></div>
                     <p class="exzoom_btn">
                        <a href="javascript:void(0);" class="exzoom_prev_btn"><i class="fa fa-angle-left"
                              aria-hidden="true"></i></a>
                        <a href="javascript:void(0);" class="exzoom_next_btn"><i class="fa fa-angle-right"
                              aria-hidden="true"></i></a>
                     </p>
                  </div>
               </div>
               <div class="product-content">
                  <h1 class="single-title">
                     <%= respdata.name %>
                  </h1>
                  <div class="short-descrition">
                     <p>
                        <%= respdata.description %>
                     </p>
                  </div>
                  <div class="product-price">
                     <div class="price-icon"><i class="fa fa-inr" aria-hidden="true"></i></div>
                     <div class="price-label">
                        <%= respdata.offer_price %>
                     </div>
                  </div>
                  <div class="catagorey-label condition-label">
                     <%= respdata.satus_name %>
                  </div>
                  <div class="reguler-price">Est. Retail: â‚¹<%= respdata.price %>
                  </div>
                  <div class="product-size">
                     <% if (respdata && respdata.size_id) { %>
                        <div class="product-size">
                           <label> Size: </label>
                           <% const sizesArray=respdata.size_id.split(' ,'); for (let i=0; i < sizesArray.length; i++) {
                              %>
                              <div class="content-size">
                                 <%= sizesArray[i] %>
                              </div>
                              <% } %>
                        </div>
                        <% } else { %>
                           <div class="product-size">
                              <label> Size: N/A </label>
                           </div>
                           <% } %>

                  </div>
                  <div class="prd-button-group spb-button-row">
                     <div class="single-button-group">
                        <% if (respdata.flag==0) { %>
                           <a href="javascript:void(0)" class="prd-btn buy-btn" data-id="<%=respdata._id%>">Buy Now</a>
                           <a href="javascript:void(0)" class="prd-btn orng-btn bidButton">Bid Now</a>
                           <% } %>
                              <% if (isWhislist==false) { %>
                                 <a href="javascript:void(0)" class="prd-btn wish-btn" data-id="<%=respdata._id%>"><i
                                       class="fa fa-heart-o" aria-hidden="true"></i></a>
                                 <% } else { %>
                                    <a href="javascript:void(0)" class="prd-btn wish-rem-btn"
                                       data-id="<%=respdata._id%>"><i class="fa fa-heart" aria-hidden="true"></i></a>
                                    <% } %>
                                       <a href="javascript:void(0)" class="prd-btn" id="share-product-icon"><i
                                             class="fa fa-share-alt" aria-hidden="true"></i></a>
                                       <div class="share-linksbox">
                                          <span class="close-icon"><i class="fa fa-times" aria-hidden="true"></i></span>
                                          <ul>
                                             <li><a target="_blank"
                                                   href="https://api.whatsapp.com/send?text=<%=websiteUrl%>/productdeatils/<%=respdata._id%>"
                                                   data-action="share/whatsapp/share" class="slc-btn wa-btn "><i
                                                      class="fa fa-whatsapp" aria-hidden="true"></i></a>
                                             </li>
                                             <li>
                                                <a target="_blank"
                                                   href="https://twitter.com/share?url=<%=websiteUrl%>/productdeatils/<%=respdata._id%>&text=<%=respdata.name%>via=<%=respdata.name%>"
                                                   class="slc-btn tw-btn "><i class="fa fa-twitter"
                                                      aria-hidden="true"></i></a>
                                             </li>
                                             <li>
                                                <a target="_blank"
                                                   href="https://www.facebook.com/sharer/sharer.php?u=<%=websiteUrl%>/productdeatils/<%=respdata._id%>"
                                                   class="slc-btn fb-btn ">
                                                   <i class="fa fa-facebook" aria-hidden="true"></i>
                                                </a>
                                             </li>
                                             <li>
                                                <a target="_blank"
                                                   href="https://www.linkedin.com/shareArticle?url=<%=websiteUrl%>/productdeatils/<%=respdata._id%>&title=<%=respdata.name%>&summary=<%=respdata.name%>&source=<%=websiteUrl%>"
                                                   class="slc-btn lnk-btn ">
                                                   <i class="fa fa-linkedin" aria-hidden="true"></i>
                                                </a>
                                             </li>
                                          </ul>
                                       </div>
                     </div>
                  </div>
                  <br>
                  <h6>Product Details</h6>
                  <h6>Specifications:</h6>
                  <div class="featured-list">
                     <ul>
                        <li><span>Brand: </span>
                           <%= respdata.brand %>
                        </li>
                        <% if (respdata.original_invoice==='0' ) { %>
                           <li><span>Original Invoice:</span>No</li>
                           <% } else { %>
                              <li><span>Original Invoice:</span>Yes</li>
                              <% } %>
                                 <% if (respdata.original_packaging==='0' ) { %>
                                    <li><span>Original Packaging:</span>No</li>
                                    <% } else { %>
                                       <li><span>Original Packaging:</span>Yes</li>
                                       <% } %>
                     </ul>
                  </div>
               </div>
            </div>
            <% } else { %>
               <div class="single-product-box">
                  
               </div>
               <% } %>
      </div>
   </section>

   <section class="product-description">
      <div class="container">
         <div class="description-tab">
            <% if (respdata && Object.keys(respdata).length > 0) { %>
            <ul class="nav nav-tabs">
               <li class="active"><a data-toggle="tab" href="#tab1" class="active">Description</a></li>
               <li><a data-toggle="tab" href="#tab2" class="">Shipping & Returns</a></li>
            </ul>
            <div class="tab-content">
               <div id="tab1" class="tab-pane fade in active show">
                 
                     <h4>
                        <%= respdata.name %>
                     </h4>
                     <p>
                        <%= respdata.description %>
                     </p>
                     <h6>Specifications:</h6>
                     <div class="featured-list">
                        <ul>
                           <li><span>Brand:</span>
                              <%= respdata.category %>
                           </li>
                           <li><span>Brand:</span>
                              <%= respdata.brand %>
                           </li>
                           <% if (respdata.original_invoice==='0' ) { %>
                              <li><span>Original Invoice:</span>No</li>
                              <% } else { %>
                                 <li><span>Original Invoice:</span>Yes</li>
                                 <% } %>
                                    <% if (respdata.original_packaging==='0' ) { %>
                                       <li><span>Original Packaging:</span>No</li>
                                       <% } else { %>
                                          <li><span>Original Packaging:</span>Yes</li>
                                          <% } %>
                        </ul>
                     </div>
                     <% } else { %>
                        <h4>Product Not Found or Not Approved Yet</h4>
                        <% } %>
               </div>
               <div id="tab2" class="tab-pane fade">
                  <h4>Shipping & Returns</h4>
                  <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry...</p>
               </div>
            </div>
         </div>
      </div>
   </section>

   <section class="product-wrapper related-products">
      <div class="container">
         <div class="top-title">
            <div class="title-box">
               <h3>Related Products</h3>
            </div>
         </div>
         <div class="slider product_Slider slider-basic">
            <% if (relatedProducts && relatedProducts.length> 0) { %>
               <% relatedProducts.forEach(function(item) { %>
                  <div class="slider-item">
                     <div class="product-box">
                        <div class="product-image">
                           <a href="<%=item._id%>"><img src="<%=item.product_images[0].image%>" alt="images"
                                 class="img-fluid"></a>
                        </div>
                        <div class="prd-short-info">
                           <div class="prd-name"><a href="<%=item._id%>">
                                 <%=item.name%>
                              </a></div>
                           <div class="prd-price"><span><i class="fa fa-inr" aria-hidden="true"></i></span>
                              <%=item.offer_price%>
                           </div>
                           <div class="rtl-price"><span>Est. Retail:</span>
                              <%=item.price%>
                           </div>
                        </div>
                     </div>
                  </div>
                  <% }); %>
                     <% } else { %>
                        <p>No related products found.</p>
                        <% } %>
         </div>
      </div>
   </section>

   <%- include('../../public/assets/include/newsletter'); %>
