<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head', { pageTitle: pageTitle }); %>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../../partials/sidebar', { siteName: siteName }); %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('../../partials/header', { siteName: siteName, userFullName: userFullName, userImage:
                        userImage }); %>
                        <!-- End of Topbar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid">
                            <!-- ... -->
                            <form class="user" action="/schedule-pickup" method="post">

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                       <h5>Schedule Your Pick Up</h5>
                                    </div>
                                   
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="hidden" name="order_id" value="<%- respdata._id  %>">
                                        <input type="text" class="form-control form-control-user" id="shipment_id"
                                            name="shipment_id" placeholder="Name"
                                            value="<%- respdata.shiprocket_shipment_id %>"
                                            required readonly>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="awb_no"
                                            name="awb_no" placeholder="Phone Number"
                                            value="<%- respdata.pickup_awb %>"
                                            required readonly>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                       <h6>
                                        Pickup Address
                                       </h6>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="awb_no"
                                            name="awb_no" placeholder="Phone Number"
                                            value=""
                                            required readonly>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                       <h6>
                                        Pickup Address
                                       </h6>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="awb_no"
                                            name="awb_no" placeholder="Phone Number"
                                            value=" <%= billingaddress.street_name %>, <%= billingaddress.address1 %>, <%= billingaddress.landmark %>, <%= billingaddress.city_name %>, <%= billingaddress.state_name %>"
                                            readonly>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <h6>Date List</h6>
                                        <select class="form-control" id="dateList" name="dateList">
                                            <!-- JavaScript will populate options here -->
                                        </select>
                                    </div>
                                </div>
                              
                                <input type="submit" class="btn btn-primary btn-user btn-block" id="btn_profile"
                                    name="btn_profile" value="Submit">
                            </form>
                            <!-- ... -->
                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../../partials/footer', { year: year, siteName: siteName }); %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->

    <%- include('../../partials/logoutModal'); %>

        <%- include('../../partials/footerJs'); %>

</body>

</html>
<script>
   
    var dateList = document.getElementById('dateList');
    var today = new Date();
    
    
    for (var i = 0; i < 4; i++) {
        var optionDate = new Date(today);
        optionDate.setDate(today.getDate() + i);

        var option = document.createElement('option');
        option.value = optionDate.toISOString().split('T')[0];
        option.text = optionDate.toDateString(); 
        dateList.appendChild(option);
    }
</script>