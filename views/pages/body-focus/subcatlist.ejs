<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head', {pageTitle: pageTitle}); %>
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../../partials/sidebar', {siteName: siteName}); %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('../../partials/header', {siteName: siteName, userFullName: userFullName, userImage:
                        userImage,searchValue: searchValue,searchType: searchType}); %>
                        <!-- End of Topbar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <h1 class="h3 mb-2 text-gray-800"><%-pageName%></h1>
                            <p class="mb-4">View / edit <%-pageName%> details</p>

                            <!-- DataTales Example -->
                            <div class="card shadow mb-4">
                                <div class="card-header ct-table-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary"><%-pageName%> Details</h6>
                                    <div>
                                        <div class="search-container">
                                            <!-- <input type="text" placeholder="Search.." id="searchInput"
                                                class="search_by" name="search">
                                            <button type="submit"><i class="fa fa-search"></i></button> -->
                                            <form>
                                                <div class="searchlist-rowbox">
                                                    <div class="fld-part">
                                                        <select id="categorySelect" class="custom-select sr-field"
                                                            required>
                                                            <option selected>Select Category</option>
                                                            <option value="name">Name</option>
                                                            <option value="category">Category</option>
                                                        </select>

                                                        <input type="text" placeholder="Product Name"
                                                            id="productNameInput" class="sr-field">
                                                    </div>
                                                    <div class="sb-box"><button type="button" onclick="searchNow()"
                                                            placeholder="Submit" class="sr-button">Search Now</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Sl No</th>
                                                    <th>Name</th>
                                                    <th>Description</th>
                                                    <th>Category Type</th>
                                                    <th>Image</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody class="sublist category-listtable">
                                                <% if(respdata.list){ %>

                                                    <% respdata.list.forEach(function(value, index) { %>
                                                        <% if(value.subcategory.parent_id !='650444488501422c8bf24bdb'
                                                            ){ %>
                                                            <tr>
                                                                <td>
                                                                    <%= (index+1) %>
                                                                </td>
                                                                <td>
                                                                    <%= value.subcategory.name %>
                                                                </td>
                                                                <td>
                                                                    <%= value.subcategory.description %>
                                                                </td>
                                                                <td>
                                                                    <%= value.parentCategoryName !=='' ?
                                                                        value.parentCategoryName:'Not Yet Set' %>
                                                                </td>
                                                                <td><img src="<%= value.subcategory.image %>"
                                                                        style="height: 40px;"></td>

                                                                <td style="vertical-align: middle;">
                                                                    <div class="action-admin">
                                                                        <a href="/edit-sub-cat/<%= value.subcategory._id %>"
                                                                            class="btn btn-info btn-circle btn-sm"
                                                                            title="Edit">
                                                                            <i class="fas fa-pencil-alt"></i>
                                                                        </a>
                                                                        <a href="/body-focus-status/<%= value.subcategory._id %>"
                                                                            class="btn btn-outline-success btn-circle btn-sm"
                                                                            title="Status change">
                                                                            <i class="fa fa-solid fa-refresh"></i>
                                                                        </a>
                                                                        <a href="/delete-body-focus/<%= value.subcategory._id %>"
                                                                            class="btn btn-danger btn-circle btn-sm"
                                                                            title="Delete">
                                                                            <i class="fas fa-trash"></i>
                                                                        </a>

                                                                        <a href="<%= value.subcategory.image %>"
                                                                            download="<%= value.subcategory.name %>.jpg"
                                                                            class="btn btn-success btn-circle btn-sm"
                                                                            title="Download">
                                                                            <i class="fas fa-download"></i>
                                                                        </a>

                                                                    </div>

                                                                </td>
                                                            </tr>
                                                            <% } %>
                                                                <% }); %>

                                                                    <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- ... existing code ... -->

                                    <div class="table-pages dsb-table-pagination">
                                        <div class="table-datainfo">
                                            <p>Showing <%= skip + 1 %> to <%= Math.min(skip + item_per_page,
                                                        totalSubcategoriesCount) %> of <%= totalSubcategoriesCount %>
                                                            entries</p>
                                        </div>
                                        <div class="table-pagination">
                                            <% const itemsPerPage=6; %>
                                                <% const totalPages=Math.ceil(totalSubcategoriesCount / itemsPerPage);
                                                    %>
                                                    <% const pagesPerBlock=6; %>

                                                        <% const currentBlock=Math.ceil(currentPage / pagesPerBlock); %>
                                                            <% const startPage=(currentBlock - 1) * pagesPerBlock + 1;
                                                                %>
                                                                <% const endPage=Math.min(startPage + pagesPerBlock - 1,
                                                                    totalPages); %>

                                                                    <ul class="pagination">
                                                                        <% if (startPage> 1) { %>
                                                                          <li>
                                                                            <a href="/body-focus-subcat?page=<%= startPage - 1 %><% if (searchType && searchValue) { %>&searchType=<%= searchType %>&searchValue=<%= searchValue %><% } %>">&laquo;</a>
                                                                          </li>
                                                                            <% } %>

                                                                                <% for (let i=startPage; i <=endPage;
                                                                                    i++) { %>
                                                                                    <li>
                                                                                        <a href="/body-focus-subcat?page=<%= i %><% if (searchType && searchValue) { %>&searchType=<%= searchType %>&searchValue=<%= searchValue %><% } %>">
                                                                                            class="<%= i === parseInt(currentPage) ? 'active' : '' %>">
                                                                                            <%= i %>
                                                                                        </a>
                                                                                    </li>
                                                                                    <% } %>

                                                                                        <% if (endPage < totalPages) {
                                                                                            %>
                                                                                            <li><a
                                                                                                    href="/body-focus-subcat?page=<%= endPage + 1 %><% if (searchType && searchValue) { %>&searchType=<%= searchType %>&searchValue=<%= searchValue %><% } %>">&raquo;</a>
                                                                                            </li>
                                                                                            <% } %>
                                                                    </ul>
                                        </div>
                                    </div>


                                    <!-- ... existing code ... -->

                                </div>
                            </div>
                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../../partials/footer', {year: year, siteName: siteName}); %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->

    <%- include('../../partials/logoutModal'); %>

        <%- include('../../partials/footerJs'); %>

</body>

</html>
<script>

    function searchNow() {
        var selectedCategory = $('#categorySelect').val();
        var productName = $('#productNameInput').val();
        var page = 1;
        // window.location.href = '/body-focus-subcat?page='+page+'productName='+productName+'selectedCategory='+selectedCategory'if
        let url = '/body-focus-subcat?';
        if(page && !isNaN(page)){
            url = url+'page='+page;
        }
        if(selectedCategory && (selectedCategory !=='')){
            url = url+'&searchType='+selectedCategory;
        }
        if(productName && (productName !=='')){
            url = url+'&searchValue='+productName;
        }
        window.location.href = url;

        $.ajax({
            url: `/body-focus-subcat`,
            type: 'GET',
            data: {
                page: page,
                searchType: selectedCategory,
                searchValue: productName,
            },
            success: function (response) {
                console.log("hi");
                console.log(response);
            },
            error: function (error) {
                console.error('Error:', error);
            }
        });

    }

    function getParameterByName(name, url) {
        if (!url) url = window.location.href;
        name = name.replace(/[\[\]]/g, "\\$&");
        var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
            results = regex.exec(url);
        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, " "));
    }

    // Usage
    var page = getParameterByName('page');
    var searchType = getParameterByName('searchType');
    var searchValue = getParameterByName('searchValue');

    if (searchType) {
        $('#categorySelect').val(searchType);
    }

    if (searchValue) {
        $('#productNameInput').val(searchValue);
    }

    // Log the values to the console (you can do further processing here)
    console.log('Page:', page);
    console.log('Search Type:', searchType);
    console.log('Search Value:', searchValue);

</script>