<script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
<script>
   const socket = io("<%=siteUrl; %>");
   let msgSendStatus = false;
   let selectedBid = ``;
   const username = $("#userId").val();
   async function updateSendMessage() {
      if(!msgSendStatus) {
         $(".sendMessageButton").attr("disabled", true);
         $(".sendMessageField").attr("disabled", true);
         $(".errorMsgClass").html("");
      } else {
         $(".sendMessageButton").attr("disabled", false);
         $(".sendMessageField").attr("disabled", false);
         $(".errorMsgClass").html("");
      }
   }
   (async function(){
      await updateSendMessage();
   })();
   $(document).on("click","#reBidButton", async function() {
      $(".clickOnProduct").each(async function(index) {
         if($(".clickOnProduct").hasClass("selectedProduct")){
            selectedBid = this.id;
            msgSendStatus = true;
            await updateSendMessage();
         }
      });
   });
   $(document).on("click","#acceptButton", async function() {
      $(".clickOnProduct").each(async function(index) {
         if($(".clickOnProduct").hasClass("selectedProduct")){
            let roomName = this.id;
            socket.emit('acceptation', {username,roomName});
            //console.log(acceptBidId);
         }
      });
   });
   $("body").on('DOMSubtreeModified', ".chat-messages", function() {
      $(".message-box-holder").each(async function() {
         if($(this).children("div.message-box").hasClass("outgoing-message")){
            $("#acceptButton").css({"pointer-events":"none"});
         } else {
            $("#acceptButton").css({"pointer-events":"auto"});
         }
      });
   });
</script>
