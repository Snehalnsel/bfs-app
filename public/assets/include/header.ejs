<script>
    window.onload = fetchData1();
    window.onload = getHeaderData();
    var hTml = ``;
    async function fetchData1() {
        try {
            const response = await fetch('/api/top-categories');
            const data = await response.json();
            const topmenu = data.respdata;
            populateSlider1(topmenu);
        }
        catch (error) {
            console.error('Error fetching data:', error);
        }
    }
    
    
    function populateSlider1(data) {
        // console.log(data);
        data.forEach(item => {
            hTml += `<div class="slider-item">
                            <div class="sld-iconbox">
                                <a href="/api/websubcategoriesproducts/${item._id}">
                                    <div class="ctg-icon">
                                        <img src="${item.image}" alt="images">
                                    </div>
                                    <h6>${item.name}</h6>
                                </a>
                            </div> 
                        </div>`;
            
        });
        // console.log(hTml);
        // $('#top-menu').append(hTml);
        document.getElementById("top-menu").innerHTML = hTml;
    }
    
    
    
    async function getHeaderData() {
        try {
            const response = await fetch('/api/headerData');
            const data = await response.json();
            const cartCount = data.cart;
            console.log(data.cart);
            
            document.getElementById('cartCount').innerText = cartCount;
            
        }
        catch (error) {
            console.error('Error fetching data:', error);
        }
    }
    
    
    
</script>
